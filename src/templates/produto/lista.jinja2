{% extends '_layout.jinja2' %}
{% from  'bootstrap/utils.html' import render_icon %}

{%  block content %}
<table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Nome do produto</th>
            <th scope="col" class="text-end">Preço</th>
            <th scope="col">Categoria do produto</th>
            <th scope="col">Ativo?</th>
            <th scope="col">Estoque</th>
            <th scope="col" class="text-end">Operações</th>
        </tr></thead>
<tbody>
{% for produto in rset %}
<tr><td>{{  produto.nome }}</td>
    <td class="text-end">{{ produto.preco }}</td>
    <td>{{ produto.categoria.nome }}</td>
    <td>{% if produto.ativo %}{{render_icon( 'check2-circle', color='blue', size=20) }}{% else %}{{render_icon( 'x', color='danger', size=20) }}{% endif %}</td>
    <td>{{ produto.estoque }}</td>


    <td> <a href="#"
    onclick="return confirm('Confirma a remoção do produto?')">{{render_icon( 'trash3-fill', color='danger', size=20) }} </a>
        <a href="#">{{render_icon( 'pencil-square', size=20) }}</a></td></tr>
{% endfor %}
</tbody>
</table>
{% endblock %}