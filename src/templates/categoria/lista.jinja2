{% extends '_layout.jinja2' %}
{% from  'bootstrap/utils.html' import render_icon %}

{%  block content %}
<table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Nome da Categoria</th>
            <th scope="col">Operações</th>
        </tr></thead>
<tbody>
{% for categoria in rset %}
<tr><td>{{  categoria .nome }}</td>
    <td> <a href="{{ url_for('categoria.remove', id_categoria=categoria.id) }}"
    onclick="return confirm('Confirma a remoção da categoria?')">
        {{render_icon( 'trash3-fill', color='danger', size=20) }} </a>
        <a href="{{ url_for('categoria.edit', id_categoria=categoria.id) }}">{{render_icon( 'pencil-square', size=20) }}</a></td></tr>
{% endfor %}
</tbody>
</table>
{% endblock %}